<%- include("partials/_header") %>

  <div class="container-fluid mt-5">
    <div class="row">
      <div id="table" class="col-md-8">
        <table class="table table-dark table-bordered table-hover">
          <thead>
            <tr class="text-center align-middle">
              <td class="p-1 fw-semibold">nÂ°</td>
              <td class="p-1 fw-semibold">Name</td>
              <td class="p-1 fw-semibold">Address</td>
              <td class="p-1 fw-semibold">Phone</td>
              <td id="actions" class="p-1 fw-semibold">Actions</td>
            </tr>
          </thead>
          <tbody>
            <% if (customers) { %>
              <% for(var i=0; i < customers.length; i++) { %>
                <tr class="text-center align-middle">
                  <td class="p-1">
                    <%= (i + 1) %>
                  </td>
                  <td class="p-1">
                    <%= customers[i].name %>
                  </td>
                  <td class="p-1">
                    <%= customers[i].address %>
                  </td>
                  <td class="p-1">
                    <%= customers[i].phone %>
                  </td>
                  <td id="editDelete" class="d-flex justify-content-center gap-2 p-1">
                    <a href="/update/<%= customers[i].id %>" class="btn btn-info">
                      Edit
                    </a>
                    <a href="/delete/<%= customers[i].id %>" class="btn btn-danger">
                      Delete
                    </a>
                  </td>
                </tr>
                <% } %>
                  <% } %>
          </tbody>
        </table>
      </div>
      <div id="form" class="col-md-4">
        <div class="card-body">
          <form action="/add" method="POST">
            <input type="text" name="name" placeholder="Name" class="form-control mb-2" autofocus />
            <input type="email" name="address" placeholder="Address" class="form-control mb-2" />
            <input type="text" name="phone" placeholder="Phone" class="form-control mb-2" />

            <button type="submit" class="btn btn-info">save customer</button>
            <button type="button" class="btn btn-info" id="btnPdf">Generate PDF</button>
          </form>
        </div>
      </div>
    </div>
  </div>
<script src="pdf.js"></script>
  <%- include("partials/_footer") %>