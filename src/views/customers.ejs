<%- include("partials/_header") %>

<div class="container-fluid mt-5">
  <div class="row">
    <div id="table" class="col-md-8">
      <table class="table table-dark table-bordered table-hover">
        <thead>
          <tr class="text-center align-middle">
            <td class="p-1 fw-semibold">nÂ°</td>
            <td class="p-1 fw-semibold">Tarea</td>
            <td class="p-1 fw-semibold">Tema</td>
            <td class="p-1 fw-semibold">Recordatorio</td>
            <td class="p-1 fw-semibold">Imagen</td>
            <td id="actions" class="p-1 fw-semibold">Opciones</td>
          </tr>
        </thead>
        <tbody>
          <% if (customers) { %> <% for(var i=0; i < customers.length; i++) { %>
          <tr class="text-center align-middle">
            <td class="p-1"><%= (i + 1) %></td>
            <td class="p-1"><%= customers[i].name %></td>
            <td class="p-1"><%= customers[i].address %></td>
            <td class="p-1"><%= customers[i].phone %></td>
            <td class="p-1">
              <img src="<%= customers[i].img %>" width="50" alt="user" />
            </td>
            <td id="editDelete" class="d-flex justify-content-center gap-2 p-1">
              <a href="/update/<%= customers[i].id %>" class="btn btn-info">
                Editar
              </a>
              <a href="/delete/<%= customers[i].id %>" class="btn btn-danger">
                Eliminar
              </a>
            </td>
          </tr>
          <% } %> <% } %>
        </tbody>
      </table>
    </div>
    <div id="form" class="col-md-4">
      <div class="card-body">
        <form action="/add" method="POST">
          <input
            type="text"
            name="name"
            placeholder="Crear Tarea"
            class="form-control mb-2"
            autofocus
          />
          <input
            type="text"
            name="address"
            placeholder="Tema"
            class="form-control mb-2"
          />
          <input
            type="date"
            name="phone"
            placeholder="Recordatorio"
            class="form-control mb-2"
          />

          <button type="submit" class="btn btn-info">Guardar Tarea</button>
          <button type="button" class="btn btn-info" id="btnPdf">
            Generar PDF
          </button>
          <a href="/photo" type="button" class="btn btn-info" id="photo"
            >Foto</a
          >
        </form>
      </div>
    </div>
  </div>
</div>
<script src="pdf.js"></script>
<%- include("partials/_footer") %>
